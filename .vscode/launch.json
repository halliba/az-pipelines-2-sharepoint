    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TypeScript",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "envFile": "${workspaceFolder}/buildAndReleaseTask/.env",
            "program": "${workspaceFolder}\\buildAndReleaseTask\\dist\\index.js",
            "preLaunchTask": "npm: build - buildAndReleaseTask",
            "outFiles": [
                "${workspaceFolder}/buildAndReleaseTask/dist/*.js"
            ]
        }
    ]
}
